{
    "body": [
        {
            "type": "form",
            "mode": "horizontal",
            "api": "/admin/config/update",
            "initApi": "get:/admin/config/all",
            "title": "配置管理",
            "body": [
                {
                    "type": "anchor-nav",
                    "links": [
                        {
                            "title": "基本配置",
                            "body": [
                                {
                                    "type": "fieldSet",
                                    "title": "基本配置（重启应用生效）",
                                    "body": [
                                        {
                                            "name": "debug",
                                            "type": "switch",
                                            "label": "调试模式",
                                            "value": false,
                                            "desc": "调试模式，同步修改所有的debug模式 "
                                        },
                                        {
                                            "name": "connect_cluster",
                                            "type": "switch",
                                            "label": "自动连接集群",
                                            "value": false,
                                            "desc": "启动集群是是否自动连接现有集群 "
                                        },
                                        {
                                            "name": "print_config",
                                            "type": "switch",
                                            "label": "打印配置",
                                            "value": false,
                                            "desc": "是否打印配置信息，默认关闭 "
                                        },
                                        {
                                            "name": "in_cluster",
                                            "type": "switch",
                                            "label": "InCluster模式",
                                            "value": false,
                                            "desc": "是否集群内模式 "
                                        },
                                        {
                                            "name": "port",
                                            "type": "input-number",
                                            "label": "服务端口",
                                            "value": 3618,
                                            "desc": "监听端口,默认3618 "
                                        },
                                        {
                                            "name": "log_v",
                                            "type": "input-number",
                                            "label": "日志级别",
                                            "value": 2,
                                            "desc": "klog的日志级别klog.V(2)"
                                        },
                                        {
                                            "name": "sqlite_path",
                                            "type": "input-text",
                                            "label": "SQLite路径",
                                            "value": "./data/k8m.db",
                                            "desc": "sqlite数据库文件路径，默认/data/k8m.db"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "title": "AI配置",
                            "body": [
                                {
                                    "type": "fieldSet",
                                    "title": "AI配置",
                                    "body": [
                                        {
                                            "name": "enable_ai",
                                            "type": "switch",
                                            "label": "AI功能开关",
                                            "value": false,
                                            "desc": "是否启用AI功能，默认开启"
                                        },
                                        {
                                            "name": "api_url",
                                            "type": "input-url",
                                            "label": "API地址",
                                            "value": "",
                                            "desc": "大模型的自定义API URL（如需使用内置的API，请留空，并重启应用）"
                                        },
                                        {
                                            "name": "api_model",
                                            "type": "input-text",
                                            "label": "模型名称",
                                            "value": "Qwen/Qwen2.5-7B-Instruct",
                                            "desc": "大模型的自定义模型名称（如需使用内置的API，请留空，并重启应用）"
                                        },
                                        {
                                            "name": "api_key",
                                            "type": "input-password",
                                            "label": "API密钥",
                                            "value": "",
                                            "desc": "大模型的自定义API Key（如需使用内置的API，请留空，并重启应用）"
                                        },
                                        {
                                            "name": "any_select",
                                            "type": "switch",
                                            "label": "任意选择",
                                            "value": false,
                                            "desc": "是否开启任意选择，默认开启"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "title": "集群配置",
                            "body": [
                                {
                                    "type": "fieldSet",
                                    "title": "集群配置",
                                    "body": [
                                        {
                                            "name": "kube_config",
                                            "type": "input-text",
                                            "label": "kubeconfig路径",
                                            "value": "~/.kube/config",
                                            "desc": "kubeconfig文件路径"
                                        },
                                        {
                                            "name": "node_shell_image",
                                            "type": "input-text",
                                            "label": "节点Shell镜像",
                                            "value": "alpine:latest",
                                            "desc": "NodeShell 镜像。默认为 alpine:latest，必须包含nsenter命令"
                                        },
                                        {
                                            "name": "kubectl_shell_image",
                                            "type": "input-text",
                                            "label": "Kubectl Shell镜像",
                                            "value": "bitnami/kubectl:latest",
                                            "desc": "Kubectl Shell 镜像。默认为 bitnami/kubectl:latest，必须包含kubectl命令"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "title": "MCP配置",
                            "body": [
                                {
                                    "type": "fieldSet",
                                    "title": "MCP配置",
                                    "body": [
                                        {
                                            "name": "mcp_server_port",
                                            "type": "input-number",
                                            "label": "MCP服务端口",
                                            "value": 3619,
                                            "desc": "MCP Server 监听端口，默认3619 。（重启应用生效）"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}